{
    "name": "MindfulCart",
    "version": "0.1.0",
    "description": "Encourage users in making eco-friendly purchases.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.amazon.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.amazon.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/images/mindfulcart_small.png"
            ],
            "matches": [
                "https://*.amazon.com/*"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "assets/images/mindfulcart_small.png",
            "24": "assets/images/mindfulcart_small.png",
            "32": "assets/images/mindfulcart_small.png"
        },
        "default_title": "MindfulCart",
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}